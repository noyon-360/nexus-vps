generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  isVerified    Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  vpsList       Vps[]
  credentialPresets CredentialPreset[]
  clients       Client[]
}

model CredentialPreset {
  id        String   @id @default(cuid())
  name      String
  config    Json
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}

model VerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  type      String   // 'REGISTER' | 'PASSWORD_RESET'
  createdAt DateTime @default(now())

  @@unique([email, token])
}

model Vps {
  id        String   @id @default(cuid())
  name      String?
  ip        String
  user      String
  password  String?
  sshKey    String?
  userId    String
  owner     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deploys   Deploy[]

  @@unique([userId, ip])
}

model Deploy {
  id          String   @id @default(cuid())
  vpsId       String
  vps         Vps      @relation(fields: [vpsId], references: [id], onDelete: Cascade)
  appName     String
  repoUrl     String
  branch      String
  port        Int
  status      String   // 'SUCCESS' | 'FAILURE' | 'PENDING'
  logs        String?  @db.Text
  createdAt   DateTime @default(now())
}

model CredentialRequest {
  id          String   @id @default(cuid())
  clientName  String   @unique
  slug        String   @unique @default(cuid())
  status      String   @default("PENDING") // PENDING, SUBMITTED
  config      Json     // Stores enabled sections { apple: true, google: true, ... }
  data        Json?    // Stores submitted data
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clientName])
}

model Client {
  id          String   @id @default(cuid())
  clientName  String   @unique
  credentials Json     // Stores all credential data (structured like CredentialRequest.data)
  config      Json     // Stores the configuration/sections used
  source      String   // 'MANUAL' | 'ONBOARDING'
  requestId   String?  // Reference to CredentialRequest if from onboarding
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([clientName])
  @@index([userId])
}
